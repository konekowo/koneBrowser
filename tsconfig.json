{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "module": "es6",
    "target": "es2020",
    "strict": true,
    "allowJs": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
